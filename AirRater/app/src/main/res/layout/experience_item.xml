<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/businessNameText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/experienceItemRatingBar"
        android:layout_below="@+id/businessNameText"
        android:layout_alignLeft="@+id/businessNameText"
        android:layout_alignStart="@+id/businessNameText"
        android:isIndicator="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Check In"
        android:id="@+id/textView23"
        android:layout_below="@+id/experienceCheckInButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Users Checked In:"
        android:id="@+id/textView24"
        android:layout_below="@+id/experienceCheckInButton"
        android:layout_alignLeft="@+id/experienceItemRatingBar"
        android:layout_alignStart="@+id/experienceItemRatingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/experienceItemNumUsersText"
        android:layout_alignBottom="@+id/textView23"
        android:layout_toRightOf="@+id/textView24"
        android:layout_toEndOf="@+id/textView24"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/experienceCheckInButton"
        android:textSize="40dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/businessNameText"
        android:layout_alignEnd="@+id/textView23"
        android:focusable="false" />
</RelativeLayout>